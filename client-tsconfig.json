{
  "compilerOptions": {
    "outDir": "client/dist/",
    "noImplicitAny": false,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "@typings"]
  },
  "include": [
    "./client/"
  ],
  "exclude": [
    "./node_modules"
  ]
}